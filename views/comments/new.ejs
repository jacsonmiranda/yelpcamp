<% include ../partials/header %>

<div class="container">
    
    <div class="row">
        <div class="col-md-12">
            <h1 style="text-align: center;">Add a new comment to <%=campground.name%></h1>
        </div>
        <div style="width: 30%;margin: 14px auto;" >
            <form action="/index/<%=campground._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block" >Submit!</button>
                </div>
                <a href="/index">Go back</a>
            </form>
        </div>
    </div>
</div>


<% include ../partials/footer %>